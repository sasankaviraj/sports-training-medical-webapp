<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - training_health_medical_app</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/training_health_medical_app.styles.css" asp-append-version="true" />

    <!-- Custom Header Styles -->
    <style>
        /* Navbar Styles */
        .navbar {
            background-color: #aad6ec; /* Blue background */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            padding: 15px 0;
            border-bottom: 2px solid #0056b3; /* Darker blue border bottom */
        }

        .navbar-brand {
            font-weight: bold;
            color: #fff; /* White text */
            font-size: 1.8rem;
            transition: color 0.3s ease;
        }

        .navbar-brand:hover {
            color: #ffd700; /* Yellow on hover */
        }

        .navbar-nav {
            margin-left: auto; /* Align nav items to the right */
        }

        .nav-link {
            /*color: #fff; /* White text */*/
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #ffd700; /* Yellow on hover */
        }

        /* Login Button Styles */
        .login-btn {
            background-color: #ffd700; /* Yellow button */
            color: #000; /* Black text */
            border: none;
            border-radius: 20px;
            padding: 8px 15px;
            transition: background-color 0.3s ease;
        }

        .login-btn:hover {
            background-color: #ffc107; /* Darker yellow on hover */
        }

        /* Footer Styles */
        html {
            position: relative;
            min-height: 100%;
        }

        body {
            margin-bottom: 60px; /* Margin bottom to accommodate footer height */
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 60px; /* Footer height */
            line-height: 60px; /* Align text vertically */
            background-color: #f8f9fa; /* Footer background color */
            border-top: 1px solid #ddd; /* Top border for separation */
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">The Netball Athletes' Training Management</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Surveys/Index">Diagnoses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Athletes/Index">Athletes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Coaches/Index">Coaches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Diagnoses/Index">Quick Chat</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - training_health_medical_app - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
