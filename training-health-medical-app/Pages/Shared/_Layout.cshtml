<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - training_health_medical_app</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/training_health_medical_app.styles.css" asp-append-version="true" />

    <!-- Custom Header Styles -->
    <style>
        .navbar {
            background-color: #fff; /* Background color */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Shadow for depth */
        }

        .navbar-brand {
            font-weight: bold;
            color: #333;
            font-size: 1.5rem; /* Brand font size */
            transition: color 0.3s ease; /* Smooth color transition */
        }

        .navbar-brand:hover {
            color: #007bff; /* Hover color */
        }

        .nav-item {
            margin-right: 15px; /* Spacing between nav items */
        }

        .nav-link {
            color: #555;
            transition: color 0.3s ease; /* Smooth color transition */
        }

        .nav-link:hover {
            color: #007bff; /* Hover color */
        }

        /* Login Partial Styles */
        .login-btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 20px;
            padding: 8px 15px;
            transition: background-color 0.3s ease; /* Smooth background color transition */
        }

        .login-btn:hover {
            background-color: #0056b3; /* Hover background color */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">The Netball Athletes' Training Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Diagnoses/Index">Diagnoses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Athletes/Index">Athletes</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - training_health_medical_app - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
