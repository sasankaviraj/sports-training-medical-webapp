@model training_health_medical_app.Pages.Coaches.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Coach Details</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Coach[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach[0].Sport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach[0].UserID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Coach) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
