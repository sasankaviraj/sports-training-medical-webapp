@page
@model training_health_medical_app.Pages.Athletes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Athlete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Athlete.Name" class="control-label"></label>
                <input asp-for="Athlete.Name" class="form-control" />
                <span asp-validation-for="Athlete.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Athlete.Gender" class="control-label"></label>
                <input asp-for="Athlete.Gender" class="form-control" />
                <span asp-validation-for="Athlete.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Athlete.Sport" class="control-label"></label>
                <input asp-for="Athlete.Sport" class="form-control" />
                <span asp-validation-for="Athlete.Sport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (Model.AthleteExists)
            {
                <div class="alert alert-danger" role="alert">
                    Athlete already exists for the current user.
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
