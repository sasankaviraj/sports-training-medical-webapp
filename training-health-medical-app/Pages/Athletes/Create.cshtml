@page
@model training_health_medical_app.Pages.Athletes.CreateModel

@{
    ViewData["Title"] = "Create Athlete";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Create Athlete</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Athlete.Name" class="control-label">Name</label>
                    <input asp-for="Athlete.Name" class="form-control" />
                    <span asp-validation-for="Athlete.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Athlete.Gender" class="control-label">Gender</label>
                    <input asp-for="Athlete.Gender" class="form-control" />
                    <span asp-validation-for="Athlete.Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Athlete.Sport" class="control-label">Sport</label>
                    <input asp-for="Athlete.Sport" class="form-control" />
                    <span asp-validation-for="Athlete.Sport" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
                @if (Model.AthleteExists)
                {
                    <div class="alert alert-danger" role="alert">
                        Athlete already exists for the current user.
                    </div>
                }
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-6 text-center">
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
